{
  "manifest_version":2,
  "version":"1.0",
  "name":"Test",
  "description": "Annotate web pages with notes and highlights",
  "icons":{
    "512":"icon.png",
    "16": "icon-16.png"
  },
  "browser_action":{
  "default_icon":{
      "512":"icon.png",
      "16": "icon-16.png"
    }
  },
  "content_scripts":[
    {
     "matches":["<all_urls>"],
     "js":["main.js"],
     "css":["index.css"]
    }
  ],
  "background":{
    "scripts":["background.js"]
  },
  "permissions":[
    "tabs",
    "activeTab"
  ]
}